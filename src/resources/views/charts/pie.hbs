    const data = {
            labels: [
                'Red',
                'Blue',
                'Yellow'
            ],
            datasets: [{
                label: 'My First Dataset',
                data: [300, 50, 100],
                backgroundColor: [
                'rgb(255, 99, 132)',
                'rgb(54, 162, 235)',
                'rgb(255, 205, 86)'
                ],
                hoverOffset: 4

            }]
    };
    const bgColor = {
        id: 'bgColor',
        beforeDraw: (chart, options) =>{
            const {ctx, width, height} = chart
            ctx.fillStyle = 'white'
            ctx.fillRect(0,0,width,height)
            ctx.restore();
        }
    }
    const config = { 
        type: 'pie',
        data: data, 
        options: {
            responsive: true,
            plugins: {
                
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'My chart',
                    font: {
                        size: 30,
                    }   
                }
            },
        },
        plugins: [ChartDataLabels, bgColor],
        
            {{!-- options: {
